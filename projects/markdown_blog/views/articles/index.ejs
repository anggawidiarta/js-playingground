<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta tags providing document metadata -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="./contract.ico" type="image/x-icon">
    <!-- Link to the Bootstrap CSS library -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <!-- Title of the webpage -->
    <title>Markdown Blog</title>
  </head>
  <body>
    <!-- Main container for the blog articles -->
    <div class="container">
      <!-- Heading for the blog articles -->
      <h1 class="mb-4">Blog Articles</h1>

      <!-- Link to create a new article -->
      <a href="/articles/new" class="btn btn-success">New Article</a>

      <!-- Looping through each article and displaying its information -->
      <% articles.forEach(article=> { %>
      <!-- Each article is displayed within a card -->
      <div class="card mt-4">
        <div class="card-body">
          <!-- Displaying the title of the article -->
          <h4 class="card-title"><%= article.title %></h4>

          <!-- Displaying the creation date of the article -->
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>

          <!-- Displaying the description of the article -->
          <div class="card-text mb-2"><%= article.description %></div>

          <!-- Link to read the full article -->
          <a href="articles/<%= article.slug %>" class="btn btn-primary"
            >Read More</a
          >
          <a href="articles/edit/<%= article.id %>" class="btn btn-info"
            >Edit</a
          >

          <!-- Form to delete the article -->
          <form
            action="/articles/<%= article.id %>?_method=DELETE"
            method="post"
            class="d-inline"
          >
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
